{
  "private": true,
  "scripts": {
    "lint": "tslint -t codeFrame -c tslint.json 'source/**/*.{ts,tsx,js}' 'tests/**/*.{ts,tsx,js}'",
    "test": "run-s lint:* build",
    "clean": "rimraf distribution",
    "build": "npm run clean && webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "version": "dot-json distribution/manifest.json version $VER",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release": "VER=$(daily-version) run-s build version release:*"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "@types/firefox-webext-browser": "^70.0.1",
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^5.0.3",
    "daily-version": "^0.12.0",
    "dot-json": "^1.1.0",
    "file-loader": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "size-plugin": "^1.2.0",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^7.0.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3",
    "web-ext": "^4.1.0",
    "web-ext-submit": "^4.1.0",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "webext-options-sync": "^0.21.2",
    "webextension-polyfill-ts": "^0.14.0"
  }
}
